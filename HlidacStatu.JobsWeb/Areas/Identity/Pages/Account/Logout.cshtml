@page
@model WatchdogAnalytics.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Odhlásit";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-retUrl_2="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Klikněte pro odhlášení</button>
            </form>
        }
        else
        {
            <p>Úspěšně jste se odhlásili.</p>
        }
    }
</header>