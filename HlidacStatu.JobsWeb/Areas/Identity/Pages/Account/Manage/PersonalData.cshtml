@page
@using WatchdogAnalytics.Areas.Identity.Pages.Account.Manage
@model WatchdogAnalytics.Areas.Identity.Pages.Account.Manage.PersonalDataModel
@{
    ViewData["Title"] = "Osobní údaje";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Váš účet obsahuje osobní údaje, které jste nám zadali. Na této stránce můžete své osobní údaje stáhnout, nebo je smazat.</p>
        <p>
            <strong>Odstraněním těchto údajů bude Váš účet trvale smazát bez možnosti obnovení.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">Stáhnout</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-secondary">Smazat</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
