@page
@model WatchdogAnalytics.Areas.Identity.Pages.Account.ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Přeposlat potvrzení registrace";
}

<h1>@ViewData["Title"]</h1>
<h4>Vyplňte e-mail</h4>
<hr />
<div class="row">
    <div class="col-sm-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="col-md-2 control-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Přeposlat</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
