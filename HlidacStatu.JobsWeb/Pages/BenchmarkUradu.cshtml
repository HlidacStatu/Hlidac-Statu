@page "{id?}"
@model BenchmarkUraduModel

@using HlidacStatu.JobsWeb.Services
@using HlidacStatu.JobsWeb.Models

@{
    ViewData["Title"] = "Benchmark úřadů";

    bool showStatistics = !string.IsNullOrWhiteSpace(Model.Ico);
    var statistics = new List<JobStatistics>();
    if (showStatistics)
        statistics = JobService.GetOdberatelStatitstics(Model.Ico);
    
    var graphModel = new Boxplot()
    {
        BasicData = statistics,
        CompareWith = JobService.GetStatitstics()
    };
}

@section Scripts
{
    <script>
    $(document).ready(function() {
      $("#selectNavigace").change(function(){
        if ($(this).val()!='') {
          window.location.href= '/BenchmarkUradu/' + $(this).val();
        }
      });
    });
    </script>
}

<h1>Benchmark úřadů</h1>
<h2>Seznam úřadů</h2>

<div class="input-group mb-3">
    <label class="input-group-text" for="selectNavigace">Vyberte úřad:</label>
    <select class="form-select" id="selectNavigace">
        <option value="" selected="@string.IsNullOrEmpty(Model.Ico)">Zvolte úřad...</option>
        @foreach (var (ico, nazev, pocetSmluv) in JobService.GetOdberateleList().OrderByDescending(x => x.pocetSmluv))
        {
            <option value="@ico" selected="@(Model.Ico == ico)">@nazev (@pocetSmluv smluv)</option>
        }
    </select>
</div>

@if (!string.IsNullOrEmpty(Model.Ico))
{
    <hr/>

    <h2>@Model.Nazev</h2>

    if (showStatistics)
    {
        <table class="table table-sm table-striped mt-4">
            <caption>Přehled cen - souhrn</caption>
            <thead>
            <tr>
                <th scope="col">Tag</th>
                <th scope="col" class="text-end">Dolní kvartil</th>
                <th scope="col" class="text-end">Medián</th>
                <th scope="col" class="text-end">Horní kvartil</th>
                <th scope="col" class="text-end">Minimum</th>
                <th scope="col" class="text-end">Průměr</th>
                <th scope="col" class="text-end">Maximum</th>
                <th scope="col" class="text-end">Počet smluv</th>
                <th scope="col" class="text-end">Počet dodavatelů</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var row in statistics)
            {
                <tr>
                    <th scope="row">@row.Name</th>
                    <td class="text-end">@row.DolniKvartil.ToString("N0")</td>
                    <td class="text-end">@row.Median.ToString("N0")</td>
                    <td class="text-end">@row.HorniKvartil.ToString("N0")</td>
                    <td class="text-end">@row.Minimum.ToString("N0")</td>
                    <td class="text-end">@row.Average.ToString("N0")</td>
                    <td class="text-end">@row.Maximum.ToString("N0")</td>
                    <td class="text-end">@row.ContractCount</td>
                    <td class="text-end">@row.SupplierCount</td>

                </tr>
            }
            </tbody>
        </table>

        <partial name="Shared/_BoxPlot" model="graphModel"/>
    }
}