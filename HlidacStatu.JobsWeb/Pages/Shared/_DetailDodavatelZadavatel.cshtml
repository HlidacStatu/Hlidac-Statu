@model (List<WatchdogAnalytics.Models.JobStatistics> statistics, WatchdogAnalytics.Models.YearlyStatisticsGroup.Key? Key)

@using HlidacStatu.Entities
@using HlidacStatu.Repositories.Cache
@using WatchdogAnalytics.Models
@using WatchdogAnalytics.Services

@{
    List<JobStatistics> statistics = Model.statistics;

    var smlouvyIds = statistics.SelectMany(m => m.Contracts).Distinct();
    if (smlouvyIds.Count() == 0)
    {
        return;
    }

    var smlouvyQuery = "id:(" + string.Join(" OR ", smlouvyIds) + ")";

    var firmyCount = await JobService.GetDodavateleListAsync(Model.Key.Value);
    
    var distinctDodavatele = statistics.SelectMany(m => m.Dodavatele).Distinct();
    var firmy = new List<(string ico, string name, int count)>();
    foreach (var ico in distinctDodavatele)
    {
        var name = await FirmaCache.GetJmenoAsync(ico);
        var count = firmyCount.Any(c => c.ico == ico) ? firmyCount.First(c => c.ico == ico).pocetCen : 0;
        firmy.Add((ico, name, count));
    }
    firmy = firmy.OrderBy(o => o.name).ToList();

    var uradyCount = await JobService.GetOdberateleListAsync(Model.Key.Value);
    var distinctOdberatele = statistics.SelectMany(m => m.Odberatele).Distinct();
    var urady = new List<(string ico, string name, int count)>();
    foreach (var ico in distinctOdberatele)
    {
        var name = await FirmaCache.GetJmenoAsync(ico);
        var count = uradyCount.Any(c => c.ico == ico) ? uradyCount.First(c => c.ico == ico).pocetCen : 0;
        urady.Add((ico, name, count));
    }
    urady = urady.OrderBy(o => o.name).ToList();
    
}

@if (this.Context.HasAccessAsync().Result.AnalyzeLevel < CenyCustomer.AccessDetail.AccessDetailLevel.PRO)
{
    <p>
        Zanalyzovali jsme celkem
        @Devmasters.Lang.CS.Plural.Get(smlouvyIds.Count(),"jednu smlouvu","{0} smlouvy","{0} smluv")
        od @(Devmasters.Lang.CS.Plural.Get(firmy.Count(),"jednoho dodavatele","{0} dodavatelů","{0} dodavatelů"))
        a od @(Devmasters.Lang.CS.Plural.Get(urady.Count(),"jednoho odběratele","{0} odběratelů","{0} odběratelů")).
    </p>
    <p>
        Detailní informace pro zadavatele a dodavatele jsou k dispozici v Analýzách PRO. Tuto úroveň analýzy nemáte zakoupenu.
        <a class="btn btn-hs btn-success btn-sm" href="/objednat">Objednat</a>
    </p>
    return;
}
<p>
    Zanalyzovali jsme celkem
    @Devmasters.Lang.CS.Plural.Get(smlouvyIds.Count(),"jednu smlouvu","{0} smlouvy","{0} smluv")
    od @(Devmasters.Lang.CS.Plural.Get(firmy.Count(),"jednoho dodavatele","{0} dodavatelů","{0} dodavatelů"))
    a od @(Devmasters.Lang.CS.Plural.Get(urady.Count(),"jednoho odběratele","{0} odběratelů","{0} odběratelů")).
</p>
<p class="pb-4">
    <a class="btn btn-hs btn-sm btn-outline-primary" href="https://www.hlidacstatu.cz/hledatsmlouvy?q=@(System.Net.WebUtility.UrlEncode(smlouvyQuery))">Ukázat všechny zanalyzované smlouvy</a>
</p>
<div class="row">
    <div class="col-12 col-sm-6">
        <h3>Dodavatelé z analýzy</h3>
        <ul>
            @foreach (var f in firmy.OrderByDescending(o=>o.count))
            {
                @if (true || f.count > 3)
                {
                    <li>
                        @f.name
                        - <a href="/BenchmarkDodavatelu/@(f.ico)?@(Model.Key.Value.UrlDecodedParams)">@(Devmasters.Lang.CS.Plural.GetWithZero(f.count,"","jedna cena","{0} ceny","{0} cen"))</a>
                    </li>
                }
                else if (f.count > 0)
                {
                    <li>
                        @f.name - méně než 4 ceny
                    </li>
                }
            }
        </ul>
    </div>

    <div class="col-12 col-sm-6">
        <h3>Zadavatelé z analýzy</h3>
        <ul>
            @foreach (var f in urady.OrderByDescending(o=>o.count))
            {
                @if (true || f.count > 3)
                {
                    <li>
                        @f.name
                        - <a href="/BenchmarkUradu/@(f.ico)?@(Model.Key.Value.UrlDecodedParams)">@(Devmasters.Lang.CS.Plural.GetWithZero(f.count,"","jedna cena","{0} ceny","{0} cen"))</a>
                    </li>
                }
                else if (f.count > 0)
                {
                    <li>
                        @f.name - méně než 4 ceny
                    </li>
                }
            }
        </ul>
    </div>
</div>