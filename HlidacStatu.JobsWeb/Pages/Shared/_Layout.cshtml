<body class="new-body">
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <svg width="46" height="46" viewBox="0 0 46 46">
                        <use xlink:href="/content/img/defs.svg#logo"></use>
                    </svg>
                    <span style="color:#25272d">Hlídač</span>&nbsp;<strong>státu</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <!-- aligned left -->
                        <a class="nav-link" href="https://www.hlidacstatu.cz/smlouvy">Smlouvy</a>
                        <a class="nav-link" href="https://www.hlidacstatu.cz/VerejneZakazky">Veřejné zakázky</a>
                        <a class="nav-link" href="https://www.hlidacstatu.cz/Dotace">Dotace</a>
                        <a class="nav-link" href="https://www.hlidacstatu.cz/Insolvence">Insolvence</a>
                        <a class="nav-link" href="https://www.hlidacstatu.cz/sponzori">Sponzoři</a>
                        <a class="nav-link" href="https://www.hlidacstatu.cz/StatniWeby">Weby státu</a>
                    </div>
                    <partial name="_LoginPartial" /> <!-- aligned right -->
                </div>
            </div>
        </nav>


        <div class="d-print-none">

            @if (ViewBag.BigBanner == true)
            {
                <div class="header__content ">

                    <div class="header__title">
                        <h1>Cenové analýzy</h1>
                        <div class="header__text">
                            Analýzy nabízí detailní přehled obvyklých cen IT služeb na českém trhu. 
                            Jde o <b style="color:yellow">nejrozsáhlejší</b> a <b style="color:yellow">nejspolehlivější přehled</b> jednotkových cen, 
                            který je státní správě i veřejnosti k dispozici. 
                            Největším přínosem analýzy je pomoc úřadům s <b style="color:yellow">orientací v obvyklých cenových relacích</b>, a dodavatelům se zvýšením šance ve výběrovém řízení.

                            <br />
                            <a style="margin-top:20px" href="/objednat" class="btn btn-primary">Objednat</a>
                        </div>
                    </div>

                </div>

            }
            else
            {
                <div class="header__content ">

                    <div style="padding-top:20px;color:#FFF"><a href="/" style="color:#FFF;text-decoration:none;"><i class="fa-regular fa-house"></i> Cenové analýzy</a> 
                        <sup class="text-warning">@(this.Context.HasAccess("IT", 2020).Result.AnalyzeLevelText)</sup>
                        &gt;</div>
                    <!-- desktop menu items only -->
                <h2 style="padding-top:20px;color:white">@ViewData["Title"]</h2>

                    @if (!string.IsNullOrEmpty(ViewData["Description"] as string))
                    {
                        <small>@ViewData["Description"]</small>
                    }
                    else if (analyza?.IsDemo == true)
                    {
                        <small class="text-warning">Toto je ukázková, volně dostupná analáza za období leden-březen 2018. Ostatní analýzy vždy pokrývají celý kalendářní rok.</small>

                    }
                    <!-- desktop menu items only -->

            </div>
            }
        </div>

    </header>
<div class="bg-light">
    <div class="container pt-2">
        <partial name="_NavBar" />
    </div>
</div>

<div class="container mt-2">
@*    <div class="col-sm-3">
        <nav id="toc" data-toggle="toc" class="sticky-top"></nav>
    </div>
*@
    <main role="main" class="pb-3">

        <div class="pt-5">
            @RenderBody()
        </div>
        @if (analyza != null && analyza.HasValue)
        {
            var data = JobService.DistinctJobsForYearAndSubject(analyza.Value);
            <div style="margin-top:50px;" class="alert alert-secondary">
                Data jsou platná k @(analyza.Value.PlatnostK), za období <b>@analyza.Value.ProObdobi</b>
                    @if (this.Context.HasAccess("IT", 2020).Result.Access)
                    {
                        <span>@(this.Context.User?.Identity?.Name)</span>
                    }
            </div>
        }
    </main>

</div>



