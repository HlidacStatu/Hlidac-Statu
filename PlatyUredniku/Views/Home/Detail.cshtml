@model HlidacStatu.Entities.Entities.PuOrganizace

@section breadcrumb
{
    <ol class="breadcrumb">
        <li>
            <a href="/">Platy úřeníků</a>
        </li>
        @foreach (var oblast in Model.OblastPath())
        {
            <li>
                <a href="@Url.Action("Oblast", "Home", new { oblast.Value })">@oblast.Key</a>
            </li>
        }
        <li class="active">@Model.Nazev</li>
    </ol>
}

<div>
    <h3>@Model.Nazev</h3>
    <small>IČO - @Model.Ico</small>
    <small>Datová schránka - @Model.DS</small>
    <p>@Model.Info</p>

    @{
        var platyGrouped = Model.Platy.GroupBy(p => p.Rok).OrderByDescending(pg => pg.Key).ToList();
    }

    <div class="d-flex align-items-start">
        <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            @{
                string classAttributes = "nav-link active";

                foreach (var platGroup in platyGrouped)
                {
                    <button class="@classAttributes" id="year-@platGroup.Key-tab" data-bs-toggle="pill" data-bs-target="#year-@platGroup.Key" type="button" role="tab">@platGroup.Key</button>
                    classAttributes = "nav-link";
                }
            }
        </div>
        <div class="tab-content" id="v-pills-tabContent">
        @{
            classAttributes = "tab-pane fade show active";

            foreach (var platGroup in platyGrouped)
            {
                <div class="@classAttributes" id="year-@platGroup.Key" role="tabpanel">
                    <table>
                        <tr>
                            <td>NazevPozice</td>
                            <td>Rok</td>
                            <td>Hrubý roční Plat</td>
                            <td>NefinancniBonus</td>
                            <td>PoznamkaPlat</td>
                            <td>PoznamkaPozice</td>
                        </tr>

                        @foreach (var plat in platGroup.OrderBy(p => p.DisplayOrder).ThenBy(p => p.NazevPozice))
                        {
                            <tr>
                                <th>@plat.NazevPozice</th>
                                <th>@plat.Rok</th>
                                <th>@plat.HrubyRocniPlat.ToString("N0")&nbsp;Kč</th>
                                <th>@plat.NefinancniBonus</th>
                                <th>@plat.PoznamkaPlat</th>
                                <th>@plat.PoznamkaPozice</th>
                            </tr>
                        }
                    </table>
                </div>

                classAttributes = "tab-pane";
            }
        }
        </div>
    </div>


</div>