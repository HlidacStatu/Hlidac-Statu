@model Dictionary<string, List<HlidacStatu.Entities.Entities.PuOrganizace>>

<section class="centered-block">
    <div class="row">


        <div class="col-12">
            <table class="table table-new table-new--dotted table-hover">
                <tbody>
                @foreach (var kvp in Model)
                {
                    <tr>
                        <td>
                            <h4>
                                <a asp-action="Oblast" asp-route-id="@kvp.Key">
                                    @kvp.Key
                                </a>
                            </h4>
                        </td>
                        <td>
                            @{
                                var instituce = kvp.Value;
                                var sample = ".";
                                if (instituce.Count > 1)
                                {
                                    sample = $" jako např. {instituce[0].Nazev}, {instituce[1].Nazev} a další.";
                                }
                            }
                            Oblast obsahuje celkem <b>@(instituce.Count)</b> institucí@(sample)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>


</section>