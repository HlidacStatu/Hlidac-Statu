@model string[]

<div class="row">


    <div class="col-12">
        <table class="table table-new table-new--dotted table-hover">
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>
                            <h4>
                                <a asp-action="Oblast" asp-route-id="@tag">
                                    @tag
                                </a>
                            </h4>
                        </td>
                        <td>
                            @{
                                var instituce = await HlidacStatu.Repositories.PuRepo.GetOrganizaceForTagAsync(tag);
                                var sample = ".";
                                if (instituce.Count > 1)
                                {
                                    sample = $" jako např. {instituce[0].Nazev}, {instituce[1].Nazev} a další.";
                                }
                            }
                            Oblast obsahuje celkem <b>@(instituce.Count)</b> institucí@(sample)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>