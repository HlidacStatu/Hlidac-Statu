@model PlatyUredniku.Models.ExportModalViewModel
@{
    string modalid = $"_em_{Model.GetHashCode()}";
    
}

<a href="#" class="btn btn-sm btn-primary" role="button" data-bs-toggle="modal" data-bs-target="#modal@(modalid)">
    <span class="small">@(string.IsNullOrWhiteSpace(Model.NazevTlacitka)? "Stáhnout open data" : Model.NazevTlacitka)</span>
</a> <!-- Modal -->
<div class="modal fade" id="modal@(modalid)" tabindex="-1" role="dialog" aria-labelledby="modal@(modalid)">
