@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Smazat můj účet";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Tímto se trvale smaže váš účet bez možnosti automatického obnovení. Vaše licence zůstane platná. V případě potřeby nás kontaktujte.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-hs btn-danger" type="submit">Smazat můj účet</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}