@model HlidacStatu.Datasets.DataSearchRawResult
@{
    var registration = await Model.DataSet.RegistrationAsync();
}


    <div class="form-search">
        <label class="sr-only" for="I">Hledat v @registration.name</label>

        <div class="row">
            <div class="col-sm-10 col-sm-offset-1 col-xs-12">
                <h4>Hledat v databázi <span class="text-info">@registration.name</span></h4>
                <form method="get" action="/data/Hledat/@Model.DataSet.DatasetId" class="form-search__input-wrapper" role="form">
                    <input class="form-search__input" id="Q" name="Q" placeholder="hledaný výraz ..."
                           style="max-width: none;" type="text" value="@Model.RenderQuery()">

                    <button class="form-search__btn" style="overflow: hidden;" type="submit">Hledat pouze v @(Devmasters.TextUtil.ShortenText(@registration.name, 40))</button>
                </form>
            </div>
            <div class="col-sm-2 col-sm-offset-9 col-xs-12 ">
                <p>
                    <a style="font-weight:bold" class="form-search__hint float-end" href="/data/napoveda/@Model.DataSet.DatasetId">
                        Jak vyhledávat v této databázi?
                    </a>
                </p>
            </div>
        </div>

        <div class="clearfix" style="padding-bottom:20px;"></div>
    </div>

