@using Devmasters.Enums
@using HlidacStatu.Entities
@using HlidacStatu.Repositories
@using HlidacStatu.XLib.Render
@model List<(string Ico, Subsidy.Hint.CalculatedCategories Category, long Count, decimal Sum)>

@{
    ViewBag.Title = "Hlídač dotací";
    ViewBag.SubTitle = "Report po kategoriích";

    int? rok = ViewData["rok"] as int?;
    int? cat = ViewData["cat"] as int?;

    var dataTableOptions = $@"{{
                         'language': {{
                            'url': '//cdn.datatables.net/plug-ins/1.13.4/i18n/cs.json'
                        }},
                        'order': [[1, 'desc']],
                        'lengthChange': false,
                        'info': false,
                        }}";

    string searchQuery = "";
    if (rok.HasValue)
    {
        searchQuery = searchQuery + "%20AND%20approvedYear:" + rok.Value;
    }
    if (cat.HasValue)
    {
        searchQuery = searchQuery + "%20AND%20hints.category1.typeValue:" + cat.Value;
    }

}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li>
            <a href="/">Hlídač Státu</a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Dotace")">Dotace</a>
        </li>
        <li class="active">@ViewBag.SubTitle</li>
    </ol>
}

@section scripts
{
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.13.4/css/jquery.dataTables.css"/>
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
    <script src="~/bundles/highcharts"></script>
}

<partial name="_pager" model="@(ValueTuple.Create((int?)null, (int?)null, rok, "/Dotace/TopKategorie"))"/>

<h2 class="mt-4">Top kategorie dotací</h2>

<h3>Obsah</h3>
<p>
@foreach (var category in Model.Select(m => m.Category).Distinct().OrderBy(m => m.ToNiceDisplayName()))
{
    <a href="#cat_@((int)category)">@category.ToNiceDisplayName()</a><br/>
}
</p>
<div class="mt-3"></div>
@foreach (var category in Model.Select(m => m.Category).Distinct().OrderBy(m => m.ToNiceDisplayName()))
{
    List<ReportDataSource<(string Ico, Subsidy.Hint.CalculatedCategories Category, long Count, decimal Sum)>.Column> dataColumns =
    [
        new()
        {
            Name = "Příjemce",
            CssClass = "text",
            HtmlRender = (x) => $"<a href=/subjekt/{x.Ico}>{FirmaRepo.NameFromIco(x.Ico)}</a>",
            TextRender = (x) => FirmaRepo.NameFromIco(x.Ico) + $" (x.Ico)"
        },
        new()
        {
            Name = "Počet dotací",
            TextRender = (x) => $"{x.Sum:N0} Kč",
            HtmlRender = (x) => $"<a href='/dotace/hledat?Q=Ico:{x.Ico}{searchQuery}'>{HlidacStatu.Util.RenderData.NiceNumber(x.Count)}</a>",
            OrderValueRender = (x) => HlidacStatu.Util.RenderData.OrderValueFormat(x.Sum),
            CssClass = "number"
        },
        new()
        {
            Name = "Částka",
            TextRender = (x) => $"HlidacStatu.Util.RenderData.NiceNumber(x.Sum)",
            HtmlRender = (x) => $"{HlidacStatu.Util.RenderData.NiceNumber(x.Sum, html:true)}",
            OrderValueRender = (x) => HlidacStatu.Util.RenderData.OrderValueFormat(x.Sum),
            CssClass = "number"
        }
    ];
    

    var data = new ReportDataSource<(string Ico, Subsidy.Hint.CalculatedCategories Category, long Count, decimal Sum)>(dataColumns);

    //for (var year = 2021; year < DateTime.Now.Year; year++)
    //{
        data.AddRows(Model.Where(m => m.Category == category).ToList());
    //}


    <h4 id="cat_@((int)category)">@category.ToNiceDisplayName()</h4>
    <div>
        @Html.DataToHTMLTable(data, tableId: "dt" + category.ToString("G"), dataTableOptions: HtmlExtensions.DatatableOptions(orderColumnIdx: 3, orderDirection: "desc"))
    </div>
}

<partial name="_categoryDisclaimer" />
