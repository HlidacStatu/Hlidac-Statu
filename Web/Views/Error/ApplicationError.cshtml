@model dynamic

@{ 
ViewBag.Title = "Nastala chyba";

string url = ViewBag.SourceUrl;
if (!string.IsNullOrEmpty(Context.Request.Query["from"]))
{
url  = Context.Request.Query["from"];
}
}

<script>
    ga('send', 'event', 'errorpage', '500', '@url');
</script>
<h3 class="text-center" style="padding-bottom:30px;">
    Chyba na serveru  Omlouváme se, něco jsme pokazili. Ale již o tom víme a pracujeme na opravě.
</h3>
<p class="text-center"><a class="btn btn-primary btn-lg" href="@(string.IsNullOrEmpty(ViewBag.NextUrl) ? Html.Raw("/") : Html.Raw(Model))" role="button">@(string.IsNullOrEmpty(ViewBag.NextUrlText) ? "Pokračovat na titulní stránce" : (string)ViewBag.NextUrlText)</a></p>
