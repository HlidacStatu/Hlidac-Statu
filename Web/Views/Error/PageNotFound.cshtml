@model dynamic

@{ 
    ViewBag.Title = "Stránka nenalezena";
    
    string url = ViewBag.SourceUrl;
    if (!string.IsNullOrEmpty(Context.Request.Query["from"]))
    {
        url  = Context.Request.Query["from"];
    }
}

<script>
    _my_event('send', 'event', 'errorpage', '404', '@url');
</script>
<h3 class="text-center" style="padding-bottom:30px;">Omlouváme se, ale stránku kterou hledáte, tu nemáme. </h3>
<p class="text-center"><a class="btn btn-hs btn-primary btn-lg" href="@(string.IsNullOrEmpty(ViewBag.NextUrl) ? Html.Raw("/") : Html.Raw(Model))" role="button">@(string.IsNullOrEmpty(ViewBag.NextUrlText) ? "Pokračovat na titulní stránce" : (string)ViewBag.NextUrlText)</a></p>
