@functions 
{
    private void RenderSubjekt(Smlouva.Subjekt subjekt, int typSubjektu)
    {
        Firma firma = Firmy.Get(subjekt.ico);
        <p>
            @Html.KIndexLabelLink(subjekt.ico)
            <a href="/subjekt/@subjekt.ico">
                <b>@subjekt.nazev</b>
            </a>

            <br/>
            @Html.Raw(string.IsNullOrWhiteSpace(subjekt.utvar) ? subjekt.utvar + "<br />" : "")

            @subjekt.adresa<br/>
            @if (!string.IsNullOrEmpty(subjekt.ico))
            {
                <text>
                    ICO <a href="/subjekt/@subjekt.ico">@subjekt.ico</a>
                </text>
            }
            @if (!string.IsNullOrEmpty(subjekt.datovaSchranka))
            {
                <text>
                    &nbsp;dat.schránka @subjekt.datovaSchranka
                </text>
            }


            @if (typSubjektu == 1)
            {
                <text>
                    <br/>Plátce peněz
                </text>
            }
            else if (typSubjektu == 2)
            {
                <text>
                    <br/>Příjemce peněz
                    <div>
                        @if (!string.IsNullOrWhiteSpace(Model.Platce?.ico) && !string.IsNullOrWhiteSpace(subjekt.ico))
                        {
                            @Html.Raw($"<a href='/HledatSmlouvy?Q=icoPlatce:{Model.Platce?.ico}%20AND%20icoPrijemce:{subjekt.ico}'>Další smlouvy mezi tímto dodavatelem a úřadem</a>")
                        }
                    </div>
                </text>
            }
            else if (typSubjektu == 3) //vkladatel do rejstriku
            {
                <text>
                </text>
            }
            @if (firma != null && firma.IsNespolehlivyPlatceDPH())
            {
                <div><span class="text-danger"><span class="glyphicon glyphicon-exclamation-sign"></span>Nespolehlivý plátce DPH</span> (<a href="@firma.GetUrl(false)">více</a>)</div>
            }


            @if (!string.IsNullOrEmpty(subjekt.ico))
            {
                <br/>
            }
        </p>
    }
}