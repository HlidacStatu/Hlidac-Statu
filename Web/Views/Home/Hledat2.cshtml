    {
        if (paorder.Contains(Model.Insolvence.GetType().Name) == false)
        {
            paorder.Add(Model.Insolvence.GetType().Name);
        }
    }

    if (paorder.Count < 2)
    {
        paorder.Add(Model.Osoby.GetType().Name);
    }
    else
    {
        paorder.Insert(1, Model.Osoby.GetType().Name);
    }
