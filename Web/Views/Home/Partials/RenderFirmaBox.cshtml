@model Firma

@using HlidacStatu.Entities
@using HlidacStatu.Entities.Facts
@using HlidacStatu.Extensions
@using HlidacStatu.Repositories
@using HlidacStatu.DS.Graphs


@if (Model == null)
{
    return;
}
else
{
    var ceo = Model.Ceo();
    
    string box1Css = "col-sm-4 col-md-3";

    <div class="@box1Css searchpromo-box">
        <div class="person-profile-thumb">
            <a href="@Model.GetUrl(true)">
                @if (ceo.Osoba != null && ceo.Osoba.IsValid())
                {
                    <div class="profile-picture border"
                         style="background-image: url('@ceo.Osoba.GetPhotoUrl(local: true, Osoba.PhotoTypes.NoBackground)')"></div>
                }
                else
                {
                    <div class="profile-picture border" style="background-image: url('/photo/unknown')"></div>
                }
            </a>
            <div>
                <a class="section-title link--blue" href="@Model.GetUrl(true)">@Model.Jmeno</a>
                <div class="new-p new-p--gray new-p--small">
                    @if (Model.JsemOVM())
                    {
                        <span>Úřad - orgán veřejné moci.</span>
                    }
                    else if (Model.JsemStatniFirma())
                    {
                        <span>Firma (spolu)vlastněná státem či samosprávou.</span>
                    }
                    else
                    {
                        <span>Soukromá firma.</span>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.StatusFull()))
                    {
                        <span class="text-muted">@Model.StatusFull().</span>
                    }

                </div>
                <div class="new-p new-p--gray new-p--small">
                    @if (Model.AktualniVazby(Relation.AktualnostType.Nedavny).Any())
                    {
                        if (Model.PatrimStatu())
                        {
                            <span>
                                            Řídí <a
                                    href="/subjekt/Vazby/@Model.ICO">@(Devmasters.Lang.CS.Plural.Get(Model.PocetPodrizenychSubjektu(Relation.AktualnostType.Nedavny), "jednu podřízenou organizaci", "{0} podřízené organizace", "{0} podřízených organizací")).</a>
                                        </span>
                        }
                        else
                        {
                            <span>
                                            Řídí <a
                                    href="/subjekt/Vazby/@Model.ICO">@(Devmasters.Lang.CS.Plural.Get(Model.PocetPodrizenychSubjektu(Relation.AktualnostType.Nedavny), "jeden podřízený subjekt", "{0} podřízené subjekty", "{0} podřízených subjektů")).</a>
                                        </span>
                        }
                    }

                </div>
                <div class="new-p new-p--gray new-p--small">
                    @Html.Raw((await Model.InfoFactsAsync()).RenderFacts(1, true, true, ", "))
                </div>
            </div>
        </div>
    </div>
}
        