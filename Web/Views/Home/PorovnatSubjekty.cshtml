        }

        public static Column PercentSmluvBezCeny(int? year)
        {
            string sYear = year.HasValue ? $" v {year}" : "";
            int iYear = year ?? DataPerYear.AllYearsSummaryKey;

            return new Column()
            {
                Name = $"% smluv bez cen {sYear}",
