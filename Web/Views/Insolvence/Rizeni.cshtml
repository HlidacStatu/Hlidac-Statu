                    <share-twitter text="@($"Insolvenční řízení '{Model.Rizeni.BookmarkName()}' na @HlidacStatu - {Model.Rizeni.InfoFacts().FirstOrDefault()?.Render(false)}")"></share-twitter>
                    @if (Model.Rizeni.OnRadar)
                    {
                        <share-widget></share-widget>
                    }
                </td>
            </tr>

        </tbody>
    </table>

