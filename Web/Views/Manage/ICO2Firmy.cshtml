@model List<HlidacStatu.Entities.Firma>

@{ ViewBag.Title = "Debug data"; }

<div class="row" >


    <h2>Nazev firmy do ICO a DS</h2>
    <form class="form-control" method="post" style="height:auto;">
        <div class="form-group">

            <label for="names">ICO firem, na řádky</label>
            <br/>
                <textarea name="names" id="names" cols="80" style="height:290px;">

                </textarea>
                <br/>
            <button type="submit">Vyhledat</button>
        </div>

    </form>
    @if (Model != null)
    {
<p>
    <table>
        <thead>
            <tr>
                <td>Název</td>
                <td>ICO</td>
                <td>DS</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in Model)
            {
            <tr>
                <td>@f.Jmeno</td>
                <td>@f.ICO</td>
                <td>@string.Join(",", f.DatovaSchranka)</td>
            </tr>
            }
        </tbody>
    </table>
</p>}
</div>
