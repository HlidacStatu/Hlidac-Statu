@using HlidacStatu.Extensions
@model IEnumerable<HlidacStatu.Entities.Review>
@{
    ViewBag.Title = "Reviews";
}

@if (!Model.Any())
{
    <p class="text-info">Nic k review tu není.</p>

    return;
}

<table class="table table-hover">
    <tr>
        <th>Typ</th>
        <th>Původní hodnota</th>
        <th>Nová hodnota</th>
        <th>Čas</th>
        <th>Autor</th>
        <th>Akce</th>
    </tr>

    @foreach (var r in Model)
    {
    <tr>
        <td>@r.ItemType.ToString()</td>
        <td>@Html.Raw(await r.RenderOldValueToHtmlAsync())</td>
        <td>@Html.Raw(await r.RenderNewValueToHtmlAsync())</td>
        <td>@r.Created.ToShortDateString()</td>
        <td>@r.CreatedBy</td>
        <td>
            <a href="/manage/reviews?id=@r.Id&a=accepted" class="btn btn-hs btn-secondary">Schválit</a>
            <a href="#" onclick="no(@r.Id);" class="btn btn-hs btn-warning">Odmítnout</a>
        </td>

    </tr>

    }

</table>

<script>
    function no(id) {
        var reason = prompt("Důvod odmítnutí", "");

        window.location = "/manage/reviews?a=denied&id=" + id + "&reason=" + encodeURI(reason);
    }

</script>