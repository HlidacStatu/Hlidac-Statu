    }

    p {
        font-size: 16px;
    }

    .watcher .btn {
        background-color: rgb(231,102,5);
        padding: 7px 15px;
        margin: 5px 0px;
        text-transform: none;
        font-size: 14px;
    }

    .moreinfolink {
        padding-top: 10px;
        display: block;
    }

    hr {
        border-top: 3px dotted #E0E6ED;
        margin-top: 24px;
        margin-bottom: 24px;
    }
</style>


<div class="head">
    <h3>
        <add-bookmark name="@(ViewBag.Title + " " + ViewBag.SubTitle)" item="@Model.osoba" style="font-size:0.7em;vertical-align:top;"></add-bookmark>
        @if (Model.viewName == "NoInfo")
        {
            <span>@Model.osoba.NameId</span>
        }
        else
        {
            <span>@Model.osoba.FullNameWithYear()</span>
            
        }

        @if (this.User?.IsInRole("canEditData") == true)
        {
            <a href="https://admin.hlidacstatu.cz/EventEditor/@Model.osoba.InternalId" target="_blank" style="font-size:0.8em">
                <i class="far fa-axe"></i>
            </a>
        }
    </h3>
    <p class="lead">@Model.osoba.MainRolesToString(PpRepo.DefaultYear)</p>

    <cache enabled="@(!System.Diagnostics.Debugger.IsAttached)" expires-after="@Constants.CachedActionLength.Cache12H" vary-by="@($"{Model.osoba.NameId}")">
        <partial name="_osobaHeader" model="@Model.osoba" />
    </cache>

</div>
<hr/>



<div class="row boxes gx-4 mt-5">

    @* levy toc sloupec *@
    <div class="col-lg-2 col-md-3 col-sm-12 border-end border-sm-0 border-md-0">
        <cache enabled="@(!System.Diagnostics.Debugger.IsAttached)" expires-after="@Constants.CachedActionLength.Cache12H" vary-by="@($"{Model.osoba.NameId}_{User.Identity.IsAuthenticated}")">
            <partial name="_ToC_Column" model="@Model.osoba" />
        </cache>
    </div>
    <div class="col-lg-10 col-md-9 col-sm-12">
        <cache enabled="@(!System.Diagnostics.Debugger.IsAttached)" expires-after="@Constants.CachedActionLength.Cache12H" vary-by="@($"{Model.osoba.NameId}_{Model.viewName}_{User.Identity.IsAuthenticated}_{this.Context.Request.QueryString.ToString()}")">
            <partial name="@Model.viewName" model="@Model.osoba" />
        </cache>
    </div>
</div>

