@using System.Linq
@using HlidacStatu.DS.Graphs
@using HlidacStatu.Entities
@using HlidacStatu.Extensions
@using HlidacStatu.XLib
@using HlidacStatu.XLib.Render
@using HlidacStatu.Repositories

@{
    Layout = "_ReportLayout";

    var showList = OsobaRepo.GetByZatrideni(OsobaRepo.Zatrideni.Poslanec, DateTime.Now)
        .OrderBy(o => o.Prijmeni)
        .ThenBy(o => o.Jmeno)
        .ToList();

    ReportDataSource poslanciTable = new(new ReportDataSource.Column[]
    {
        new()
        {
            Name = "Poslanec (nováčci s <span style='padding-left:5px;' class='fad fa-star text-success' aria-hidden='true'></span> )",
            HtmlRender = (s) =>
            {
                Osoba o = (Osoba)s;
                return string.Format("<a href='{0}'>{1}</a>", o.GetUrl(), o.FullNameWithYear(true))
                       + "<br />"
                       + Devmasters.TextUtil.ShortenText(o.Description(false, m => true, numOfRecords: 3), 250).Replace("\n", "<br />");
            },
            OrderValueRender = (s) =>
            {
                Osoba o = (Osoba)s;
                return o.FullName(false);
            }
        },
        new()
        {
            Name = "Strana/Hnutí",
            HtmlRender = (s) =>
            {
                Osoba o = (Osoba)s;
                return o.CurrentPoliticalParty();
            },
            OrderValueRender = (s) =>
            {
                Osoba o = (Osoba)s;
                return o.CurrentPoliticalParty();
            }
        },
        new()
        {
            Name = "Angažovanost",
            HtmlRender = (s) =>
            {
                Osoba o = (Osoba)s;
                string sout = "";

                if (o.Vazby() != null)
                {
                    string customUrl = $"/hledat?Q=osobaid:{o.NameId}";
                    foreach (var v in o.StatistikaRegistrSmluv().SoukromeFirmy.Take(2))
                    {
                        if (v.Value is null)
                            continue;
                        sout = sout + v.Value.Summary(HlidacStatu.Lib.Analytics.CoreStat.UsualYearsInterval.FromUsualFirstYearUntilNow).ToNiceLinkString(null, true, customUrl: customUrl) + "<br/>";
                    }

                    if (o.StatistikaRegistrSmluv().SoukromeFirmy.Count() == 3)
                    {
                        sout = sout + o.StatistikaRegistrSmluv().SoukromeFirmy
                            .Skip(2).First()
                            .Value.Summary(HlidacStatu.Lib.Analytics.CoreStat.UsualYearsInterval.FromUsualFirstYearUntilNow).ToNiceLinkString(null, true, customUrl: customUrl);
                    }
                    else if (o.StatistikaRegistrSmluv().SoukromeFirmy.Count() > 2)
                    {
                        sout = sout + "<a href='" + o.GetUrl() + "'>" + Devmasters.Lang.CS.Plural.Get(o.Vazby().Length - 2, "+další vazba;+ další {0} vazby;+ dalších {0} vazeb") + "</a>";
                    }
                }

                return sout;
            },
            OrderValueRender = (s) =>
            {
                Osoba o = (Osoba)s;
                return o.FullName(false);
            }
        },
        new()
        {
            Name = "Sponzor",
            HtmlRender = (s) =>
            {
                Osoba o = (Osoba)s;
                var sum = o.Sponzoring().Sum(m => m.Hodnota);
                if (sum == 0)
                    return "Ne";
                else
                    return "Celkem&nbsp;" + HlidacStatu.Util.RenderData.NicePriceHtml(sum.Value) + string.Format("<br /><a href='{0}'>podrobnosti</a>", o.GetUrl());
            },
            OrderValueRender = (s) =>
            {
                Osoba o = (Osoba)s;
                var val = o.Sponzoring().Sum(m => m.Hodnota);
                return HlidacStatu.Util.RenderData.OrderValueFormat(val);
            }
        },
    });


    foreach (var p in showList)
    {
        poslanciTable.AddRow(p);
    }
}

<h3 id="tblHead">Aktuální složení PSP ČR</h3>
@ChartUtilExtensions.RenderReport("", ReportModel.QueueItem.types.table, poslanciTable, @"{
                 'language': {
                    'url': '//cdn.datatables.net/plug-ins/1.13.4/i18n/cs.json'
                },
                'order': [4,'desc'],
                'lengthChange': false,
                'info': false,
                'paging': true,
                'pageLength': 50,
                'columnDefs': [{ 'visible': false, 'targets': 0 }]
                }", "tbPoslanci")