@using System.Linq
@using HlidacStatu.DS.Graphs
@using HlidacStatu.Entities
@using HlidacStatu.Extensions
@using HlidacStatu.XLib
@using HlidacStatu.XLib.Render
@using HlidacStatu.Repositories

@{
    Layout = "_ReportLayout";

    var showList = OsobaRepo.GetByZatrideni(OsobaRepo.Zatrideni.Poslanec, DateTime.Now)
        .OrderBy(o => o.Prijmeni)
        .ThenBy(o => o.Jmeno)
        .ToList();

    ReportDataSource<Tuple<Osoba, Osoba.Statistics.RegistrSmluv>> poslanciTable = new(new ReportDataSource<Tuple<Osoba, Osoba.Statistics.RegistrSmluv>>.Column[]
    {
        new()
        {
            Name = "Poslanec (nováčci s <span style='padding-left:5px;' class='fad fa-star text-success' aria-hidden='true'></span> )",
            HtmlRender =(s) =>
            {
                return string.Format("<a href='{0}'>{1}</a>", s.Item1.GetUrl(), s.Item1.FullNameWithYear(true))
                       + "<br />"
                       + Devmasters.TextUtil.ShortenText(s.Item1.Description(false, m => true, numOfRecords: 3), 250).Replace("\n", "<br />");
            },
            OrderValueRender = (s) =>
            {
                return s.Item1.FullName(false);
            }
        },
        new()
        {
            Name = "Strana/Hnutí",
            HtmlRender =(s) =>
            {
                return s.Item1.CurrentPoliticalParty();
            },
            OrderValueRender = (s) =>
            {
                return s.Item1.CurrentPoliticalParty();
            }
        },
        new()
        {
            Name = "Angažovanost",
            HtmlRender =(s) =>
            {
                string sout = "";

                if (s.Item1.Vazby() != null)
                {
                    string customUrl = $"/hledat?Q=osobaid:{s.Item1.NameId}";
                    foreach (var v in s.Item2.SoukromeFirmy.Take(2))
                    {
                        if (v.Value is null)
                            continue;
                        sout = sout + v.Value.Summary(HlidacStatu.Lib.Analytics.CoreStat.UsualYearsInterval.FromUsualFirstYearUntilNow).ToNiceLinkString(null, true, customUrl: customUrl) + "<br/>";
                    }

                    if (s.Item2.SoukromeFirmy.Count() == 3)
                    {
                        sout = sout + s.Item2.SoukromeFirmy
                            .Skip(2).First()
                            .Value.Summary(HlidacStatu.Lib.Analytics.CoreStat.UsualYearsInterval.FromUsualFirstYearUntilNow).ToNiceLinkString(null, true, customUrl: customUrl);
                    }
                    else if (s.Item2.SoukromeFirmy.Count() > 2)
                    {
                        sout = sout + "<a href='" + s.Item1.GetUrl() + "'>" + Devmasters.Lang.CS.Plural.Get(s.Item1.Vazby().Length - 2, "+další vazba;+ další {0} vazby;+ dalších {0} vazeb") + "</a>";
                    }
                }

                return sout;
            },
            OrderValueRender = (s) =>
            {
                return s.Item1.FullName(false);
            }
        },
        new()
        {
            Name = "Sponzor",
            HtmlRender =(s) =>
            {
                var sum = s.Item1.Sponzoring().Sum(m => m.Hodnota);
                if (sum == 0)
                    return "Ne";
                else
                    return "Celkem&nbsp;" + HlidacStatu.Util.RenderData.NicePriceHtml(sum.Value) + string.Format("<br /><a href='{0}'>podrobnosti</a>", s.Item1.GetUrl());
            },
            OrderValueRender = (s) =>
            {
                var val = s.Item1.Sponzoring().Sum(m => m.Hodnota);
                return HlidacStatu.Util.RenderData.OrderValueFormat(val);
            }
        },
    });


    foreach (var osoba in showList)
    {
        Osoba.Statistics.RegistrSmluv? stat = await osoba.StatistikaRegistrSmluvAsync();
        var tuple = new Tuple<Osoba, Osoba.Statistics.RegistrSmluv>(osoba, stat);
        poslanciTable.AddRow(tuple);
    }
}

<h3 id="tblHead">Aktuální složení PSP ČR</h3>

@HtmlExtensions.DataToHTMLTable(poslanciTable, tableId:"", dataTableOptions: @"{
                 'language': {
                    'url': '//cdn.datatables.net/plug-ins/1.13.4/i18n/cs.json'
                },
                'order': [4,'desc'],
                'lengthChange': false,
                'info': false,
                'paging': true,
                'pageLength': 50,
                'columnDefs': [{ 'visible': false, 'targets': 0 }]
                }", "tbPoslanci")