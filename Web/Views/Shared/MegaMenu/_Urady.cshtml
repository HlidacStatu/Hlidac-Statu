@using Devmasters.Enums;
@using HlidacStatu.Entities

<div class="mega-content px-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-4 py-4 bg-body-tertiary">
                <div class="mega-content-title">Přehledy</div>
                <p>
                    Pokud hledáte informace o konkrétním úřadu, nejrychlejší je napsat jeho jméno nebo část
                    do <a onclick="return trackOutLink(this,'megamenu');" href="#" onclick="closeMegaMenu(this);$('#autocompleteInputBox').focus();return false;"><b>vyhledávání</b></a>.
                </p>
                <p>
                    Anebo můžete procházet naším adresářem úřadů:
                </p>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Státní úřady</div>
                            @{
                                Firma.Zatrideni.SubjektyObory[] uradyList1 = new Firma.Zatrideni.SubjektyObory[]
                                {
                            Firma.Zatrideni.SubjektyObory.Ministerstva,
                            Firma.Zatrideni.SubjektyObory.Dalsi_ustredni_organy_statni_spravy,
                            Firma.Zatrideni.SubjektyObory.Media,
                            Firma.Zatrideni.SubjektyObory.Statni_podniky,
                            Firma.Zatrideni.SubjektyObory.Organizacni_slozky_statu,
                                };
                            }
                            <ul>
                                @foreach (var l in uradyList1)
                                {
                                    <li>
                                        <a onclick="return trackOutLink(this,'megamenu');" href="/adresar/@(l.ToString())">@(l.ToNiceDisplayName())</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Samospráva</div>
                            @{
                                Firma.Zatrideni.SubjektyObory[] uradyList2 = new Firma.Zatrideni.SubjektyObory[]
                                {
                            Firma.Zatrideni.SubjektyObory.Obce_III_stupne,
                            Firma.Zatrideni.SubjektyObory.Kraje_Praha,
                            Firma.Zatrideni.SubjektyObory.Statutarni_mesta,
                            Firma.Zatrideni.SubjektyObory.Mestske_casti_Prahy,
                                };
                            }
                            <ul>
                                @foreach (var l in uradyList2)
                                {
                                    <li>
                                        <a onclick="return trackOutLink(this,'megamenu');" href="/adresar/@(l.ToString())">@(l.ToNiceDisplayName())</a>
                                    </li>
                                }
                            </ul>

                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Zdravotnictví</div>
                            @{
                                Firma.Zatrideni.SubjektyObory[] uradyList3 = new Firma.Zatrideni.SubjektyObory[]
                                {
                            Firma.Zatrideni.SubjektyObory.Zdravotni_pojistovny,
                            Firma.Zatrideni.SubjektyObory.Zdravotni_ustavy,
                            Firma.Zatrideni.SubjektyObory.Fakultni_nemocnice,
                            Firma.Zatrideni.SubjektyObory.Velke_nemocnice,
                            Firma.Zatrideni.SubjektyObory.Nemocnice,
                                };
                            }
                            <ul>
                                @foreach (var l in uradyList3)
                                {
                                    <li>
                                        <a onclick="return trackOutLink(this,'megamenu');" href="/adresar/@(l.ToString())">@(l.ToNiceDisplayName())</a>
                                    </li>
                                }
                            </ul>

                        </div>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <a class="fw-bold" onclick="return trackOutLink(this,'megamenu');" href="/adresar">a stovky další úřadů</a>
                        </div>
                    </li>
                </ul>

            </div>
            <div class="col-12 col-md-4 py-4 ">
                <div class="mega-content-title"><a onclick="return trackOutLink(this,'megamenu');" href="/kindex">K-Index</a><br /><small>Index klíčových rizik úřadů</small></div>

                <div class="text-center">
                    <img src="/content/img/kindex_a-f.svg" style="max-width:85%;padding-bottom:6px;max-height:80px;">
                </div>
                <p>
                    Index klíčových rizik - zkráceně <b><a onclick="return trackOutLink(this,'megamenu');" href="/kindex">K–Index</a></b>,
                        je ukazatel míry rizikových faktorů. Tyto faktory jsou spojovány s rizikem korupce a nehospodárným nakládáním veřejných peněz.
                </p>
                <p>
                    <a onclick="return trackOutLink(this,'megamenu');" href="/kindex/zebricek" class="btn btn-primary btn-sm">Najít hodnocení úřadu/státní firmy</a>
                    <a onclick="return trackOutLink(this,'megamenu');" href="/kindex#porovnavac" class="btn btn-default btn-sm">Porovnání rizik úřadů/státních firem</a>
                </p>
                <p>
                    <div class="mega-content-subtitle">Žebříčky K-Indexu</div>
                    <a onclick="return trackOutLink(this,'megamenu');" href="/kindex/zebricek/skokani" class="btn btn-default btn-sm">Největší meziroční změny</a>
                    <a onclick="return trackOutLink(this,'megamenu');" href="/kindex/zebricek/nejlepsi" class="btn btn-default btn-sm">100 nejlepších</a>
                    <a onclick="return trackOutLink(this,'megamenu');" href="/kindex/zebricek/nejhorsi" class="btn btn-default btn-sm">100 nejhorších</a>
                    <a onclick="return trackOutLink(this,'megamenu');" href="/kindex/zebricek" class="btn btn-primary btn-sm">Všechny žebříčky</a>
                </p>
            </div>
            <div class="col-12 col-md-4 py-4 bg-body-tertiary">
                <div class="mega-content-title"><a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/?utm_source=megamenu&utm_medium=referral&utm_campaign=permanent&utm_content=BoxOnTopH3" target="_blank">Platy úředníků</a></div>
                <p>
                    Projekt <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/?utm_source=megamenu&utm_medium=referral&utm_campaign=permanent&utm_content=BoxOnTop" target="_blank">Platy úředníků</a> poskytuje informace o platech a odměnách řídících pracovníků z více než 200 institucí.
                    <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/o-projektu/?utm_source=megamenu&utm_medium=referral&utm_campaign=permanent&utm_content=BoxOnTop" target="_blank">
                        Zde podrobnosti o projektu.</a>
                </p>

                <div class="mega-content-subtitle">Platy v nejdůležitějších úřadech</div>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/detail/9hjaihw">Kancelář prezidenta republiky</a>
                        <span class="badge rounded-pill text-bg-success"><i class="fa-solid fa-thumbs-up"></i> máme</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/Oblast/kanceláře">Exekutivní úřady</a>
                        <span class="badge rounded-pill text-bg-success"><i class="fa-solid fa-thumbs-up"></i> máme</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/Oblast/ministerstvo">Ministerstva</a>
                        <span class="badge rounded-pill text-bg-success"><i class="fa-solid fa-thumbs-up"></i> máme</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/oblast/justice">Oblast justice</a>
                        <span class="badge rounded-pill text-bg-success"><i class="fa-solid fa-thumbs-up"></i> máme</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/Oblast/doprava">Oblast dopravy</a>
                        <span class="badge rounded-pill text-bg-danger"><i class="fa-solid fa-thumbs-down"></i> malou část</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/Oblast/pr%C5%AFmysl%20a%20obchod">Podřízenky Ministerstva průmyslu a obchodu</a>
                        <span class="badge rounded-pill text-bg-warning"><i class="fa-solid fa-thumbs-down"></i> menšinu</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-start">
                        <a class="fw-bold" onclick="return trackOutLink(this,'megamenu');" href="https://platyuredniku.hlidacstatu.cz/Oblast/centr%C3%A1ln%C3%AD%20a%20kontroln%C3%AD%20instituce">Centrální a kontrolní instituce</a> <i class="fa-solid fa-arrow-up-right-from-square "></i>

                    </li>
                </ul>
                <p>
                    <a onclick="return trackOutLink(this,'megamenu');" style="margin:1em" href="https://texty.hlidacstatu.cz/2024/06/04/urednicke-platy-v-novem/" class="btn btn-primary btn-sm">Shrnutí platů za 2023</a>

                    <a onclick="return trackOutLink(this,'megamenu');" style="margin:1em" href="https://texty.hlidacstatu.cz/2023/06/22/platy-uredniku-za-rok-2022/" class="btn btn-primary btn-sm">Shrnutí platů za 2022</a>
                    <a onclick="return trackOutLink(this,'megamenu');" style="margin:1em" href="https://texty.hlidacstatu.cz/2022/05/25/platy-k-nezaplaceni-na-kolik-si-prisli-za-minuly-rok-nejvyssi-statni-urednici/" class="btn btn-primary btn-sm">Shrnutí platů za 2021</a>

                </p>
            </div>

        </div>
    </div>
</div>
