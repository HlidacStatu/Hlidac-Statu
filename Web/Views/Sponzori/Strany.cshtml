@model ReportDataSource<SponzoringRepo.Strany.StranaPerYear>
@using System.Linq;
@using HlidacStatu.XLib.Render;
@using HlidacStatu.Entities;
@using HlidacStatu.Repositories

@{

    ViewBag.Title = "Sponzoři " + ViewBag.Strana;
    int count = 0;
    int maxSponzori = 10;
    string[] vsechnyStrany =
        SponzoringRepo.VelkeStrany
        .Union(
            SponzoringRepo.GetStranyPerYear
            .Get()
            .Select(m => m.Strana)
            .Distinct()
            .Where(m => !SponzoringRepo.VelkeStrany.Contains(m))
            .OrderBy(m => m)
        )
        .ToArray()
        ;



    ReportDataSource rokyTable = new ReportDataSource(new ReportDataSource.Column[]
  {
                    new ReportDataSource.Column() { Name="Rok",
                        HtmlRender = (s) => {
                            return ((Tuple<int, decimal>)s).Item1.ToString();
                            }
                        ,ValueRender = (s) => {
                                int dt = ((Tuple<int, decimal>)s).Item1;
                                return new DateTime(dt, 1, 1);
                            }
                    }
                ,
                new ReportDataSource.Column() { Name="Sponzoring celkem",
                    HtmlRender = (s) => {
                                return HlidacStatu.Util.RenderData.ShortNiceNumber(((Tuple<int, decimal>)s).Item2);
                            }
                        ,ValueRender = (s)=>((Tuple<int, decimal>)s).Item2
                        }

                                              }); ;

}
@section scripts
{
    <script src="/Scripts/typeahead.jquery.min.js"></script>
    <script src="/Scripts/bloodhound.min.js"></script>
    <link href="/Content/typeaheadjs.css" media="all" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.css"/>
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="~/bundles/highcharts"></script>
}

@section breadcrumb
{
    <ol class="breadcrumb">
        <li><a href="/">Hlídač Státu</a></li>
        <li><a href="/sponzori">Sponzoři</a></li>
        <li class="active">Politické strany</li>
    </ol>
}

<div class="row">
    @foreach (var strana in vsechnyStrany)
    {
        count++;

        var lastYear = SponzoringRepo.DefaultLastSponzoringYear;

        int year = lastYear - 3;
        var topSponzoriAll = SponzoringRepo.AllTimeTopSponzorsPerStrana(strana, maxSponzori, DateTime.Now.Year - 10);
        var topSponzoriYear = SponzoringRepo.AllTimeTopSponzorsPerStrana(strana, maxSponzori, year);

        <div class="col-xs-12 col-sm-6">
            <h3><a href="@Sponsors.GetStranaUrl(strana)">@strana</a></h3>

            <table class="table table-hover table-new table-new--dotted table-striped">
                @*<thead>
                        <tr>
                            <th>Dary v @year</th>
                            <th>@(year + 1)</th>
                            <th>@(year + 2)</th>
                            <th>@(year + 3)</th>
                        </tr>
                    </thead>*@
                <tbody>
                    @*<tr>
                            <td class="number">@HlidacStatu.Util.RenderData.ShortNicePrice(Sponsors.Strany.StranaPerYears(strana, year).TotalKc)</td>
                            <td class="number">@HlidacStatu.Util.RenderData.ShortNicePrice(Sponsors.Strany.StranaPerYears(strana, year + 1).TotalKc)</td>
                            <td class="number">@HlidacStatu.Util.RenderData.ShortNicePrice(Sponsors.Strany.StranaPerYears(strana, year + 2).TotalKc)</td>
                            <td class="number">@HlidacStatu.Util.RenderData.ShortNicePrice(Sponsors.Strany.StranaPerYears(strana, year + 3).TotalKc)</td>
                        </tr>*@
                <td colspan="1">
                    @{
                        //ReportDataSource data = new ReportDataSource("Dary za rok", "Celková částka");
                        rokyTable.Clear();
                        for (int i = lastYear - 9; i <= lastYear; i++)
                        {
                            rokyTable.AddRow(new Tuple<int, decimal>(i, SponzoringRepo.StranaPerYears(strana, i).TotalKc ?? 0));
                        }
                    }
                    @ChartUtil.RenderReportChart("Sponzoring pro " + strana,
                               Html.SimpleBarChart(true, true, 260, "price_year_chart_pocet" + Guid.NewGuid().ToString("N"), "Rok", "Sponzoring Kč",
                                  rokyTable, xValueFormat: "{value:%Y}"))
                </td>
                <tr>
                    <td colspan="1">
                        @if (topSponzoriYear.Count() > 0)
                        {
                            <div>
                                Top sponzoři od @year:
                                <low-box width="80">
                                    <ol>
                                        @foreach (var sponzor in topSponzoriYear)
                                        {
                                            <li>
                                                <a href="@(sponzor.Sponzor.GetUrl(true))">@(sponzor.Sponzor.BookmarkName())</a>
                                                (@Html.Raw(HlidacStatu.Util.RenderData.ShortNicePrice(sponzor.CastkaCelkem, html: true))) ,
                                            </li>
                                        }
                                    </ol>
                                </low-box>
                            </div>
                        }
                        @if (topSponzoriAll.Count() > 0)
                        {
                            if (topSponzoriYear.Count() > 0)
                            {
                                <hr />
                            }
                            <div>
                                Top sponzoři od @(DateTime.Now.Year - 10):
                                <low-box width="80">
                                    <ol>
                                        @foreach (var sponzor in topSponzoriAll)
                                        {
                                            <li>
                                                <a href="@(sponzor.Sponzor.GetUrl(true))">@(sponzor.Sponzor.BookmarkName())</a>
                                                (@Html.Raw(HlidacStatu.Util.RenderData.ShortNicePrice(sponzor.CastkaCelkem, html: true))) ,
                                            </li>
                                        }
                                    </ol>
                                </low-box>
                            </div>
                        }
                        @if (topSponzoriAll.Count() == maxSponzori)
                        {
                            <text>
                                <br /><a href="@Sponsors.GetStranaUrl(strana)">Všichni ostatní sponzoři</a>.
                            </text>
                        }

                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        if (count % 2 == 0)
        {
            <div class="clearfix"></div>
        }
        if (strana == SponzoringRepo.VelkeStrany.Last())
        {
            count = 0;
            @Html.Raw("</div><hr /><div class=\"row\">");
        }
    }
</div>

