                                                <td>
                                                    <i class="fa-solid fa-circle-info" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Protokol @(_tp?.CisloProtokolu ?? _stk.CisloProtokolu)"></i>
                                                </td>
                                                <td>@Display(_tp?.Typ?.Substring(4) ?? "" )</td>
                                                <td>
                                                    @Html.Raw(_tp?.Stav ?? (_stk == null ? "" :( _stk.KontrolaUspesna==true ? "<i class='fa-solid fa-square-check text-success'></i>" : "<i class='fa-solid fa-square-x text-danger'></i>") ))
