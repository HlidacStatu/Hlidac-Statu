                    <div class="col-12">
                        @if (technickeProhlidky.Any())
                        {
                            <div class="table-responsive">
                                <table class="table history-table align-middle mb-0">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Typ</th>
                                            <th>Stav</th>
                                            <th>Stanice</th>
                                            <th>Platnost</th>
                                            <th>Protokol</th>
                                            <th>Stav km</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var prohlidka in prohlidky.OrderByDescending(item => item.Item1))
                                        {
                                            MereniLightDb _stk = prohlidka.Item2 as MereniLightDb;
                                            TechnickeProhlidky _tp = prohlidka.Item2 as TechnickeProhlidky;
                                            string staniceId = (_tp?.KodStk?.ToString("######") ?? _stk?.StaniceCislo);
                                            Stanice st = await HlidacStatu.RegistrVozidel.Repo.Cached.GetStaniceAsync(staniceId);

                                            HlidacStatu.RegistrVozidel.STK.Models.Zavada[] zavady = HlidacStatu.RegistrVozidel.STK.Zavady.Get(_stk?.ZavadyList);

