                                                    {
                                                        <span>
                                                            <b>Závady:</b>
                                                            @for (int i = 0; i < zavady.Length; i++)
                                                            {
                                                                var zavada = zavady[i];
                                                                <div class="text-bg-@(zavada.BootstrapClass) ps-1" title="@(i + 1). @(zavada.code + " " + zavada.description)">@(i+1). @(zavada.description.ShortenMe(30))</div>
                                                            }
                                                        </span>
                                                    }                                                    
                                                </td>
                                                <td>@DisplayRawOrDash(_tp?.NazevStk?.ShortenMe(30) ?? _stk.StaniceCislo)</td>
                                                <td>@if (_tp != null) {
                                                            <span>@Display(_tp?.PlatnostOd) - @Display(_tp?.PlatnostDo)</span>
                                                    }
                                                    else if (_stk != null) {
                                                            <span>@Display(_stk?.DatumProhlidky)</span>
                                                        }
                                                </td>
                                                <td>
                                                    @Display(_stk?.StavTachometru)
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="history-muted">Bez záznamů.</div>
                        }
                    </div>
                </div>
            </content>
            <content collapsed="true" title="<i class='fa-solid fa-user me-2'></i> Majitelé a provozovatelé" css-title="fs-5">
